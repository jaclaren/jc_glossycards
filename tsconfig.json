{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es6"
      ],
      "outDir": "dist",
      "rootDir": "src",
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "noEmit": false,
      "jsx": "react-jsx"      
    },
    "exclude": [
      "src/**/*.tests.js",
      "dist/*"
    ],
    "include": [
      "src/**/*"
    ]
  }
  